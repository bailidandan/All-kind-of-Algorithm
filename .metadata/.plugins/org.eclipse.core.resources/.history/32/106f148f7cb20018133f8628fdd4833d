			int rs=0;
			while(true){
				int zeng=100-a.get(rs);
				if((pj*n+zeng)/n>=X)break;
				rs++;
			}
			System.out.println(rs+1);
		}
	}

	private static int pj(ArrayList<Integer> a) {
		// TODO Auto-generated method stub
		return 0;
	}

}
